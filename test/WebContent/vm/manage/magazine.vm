    	function txView(value,row,index){
    		if(typeof(value)==='undefined'){ return ""; }
    		return "<img src='../"+value+"' style='height:55px;width:55px;float:left;'>";
    	}
    	//格式化日期
    	function myformatter(date){
			var y = date.getFullYear();
			var m = date.getMonth()+1;
			var d = date.getDate();
			return y+'-'+(m<10?('0'+m):m)+'-'+(d<10?('0'+d):d);
		}
    	function language(value,row,index){
    		if(value==1){
    			return "中法";
    		}else if(value==2){
    			return "中阿";
    		}else if(value==3){
    			return "中泰";
    		}else if(value==4){
    			return "中俄";
    		}else if(value==5){
    			return "中英";
    		}else if(value==6){
    			return "中西";
    		}else if(value==7){
    			return "中日";
    		}else if(value==8){
    			return "中意";
    		}else if(value==9){
    			return "中德";
    		}else if(value==10){
    			return "中葡";
    		}else if(value==11){
    			return "中韩";
    		}
    	}
    })
