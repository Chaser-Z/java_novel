<script type="text/javascript">
	//搜索
	function doSearch(value){
		$('#list_data').datagrid('load',{
			content:value
		});
		$('#list_data').datagrid('clearSelections');
	}
	
	//返回
	function doBack(){
		$('#list_data').datagrid('load');
		$("#back").hide();
	}
	
	//子菜单
	function doChild(pid){
		$('#list_data').datagrid('load',{pid:pid});
		$("#_pid").val(pid);
		$("#back").show();
	}
	
	//新建
	function doAdd(type){
		$("#coversimg").find("img").attr("src","");
		$("#coversimg").hide();
		$("#pdfFilePath").find("a").attr("href","#");
		$("#pdfFilePath").hide();
		$('#m_form').form('clear');
		$("#update_id").val("");
		$('#dialog_edit').show();
        $('#dialog_edit').dialog({modal:true});
        $("#id").textbox({ disabled: false });
	}
	
	//编辑
	function doEdit(id,cover,pdfFilePath){
		$("#coversimg").find("img").attr("src","");
		$("#coversimg").hide();
		$("#pdfFilePath").find("a").attr("href","#");
		$("#pdfFilePath").hide();
		if(cover != 'undefined'&& typeof(cover) != 'undefined' && cover != null && cover != ''){
			$("#coversimg").find("img").attr("src","../"+cover);
			$("#coversimg").show();
		}
		if(pdfFilePath != 'undefined'&& typeof(pdfFilePath) != 'undefined' && pdfFilePath != null && pdfFilePath != ''){
			$("#pdfFilePath").find("a").attr("href","../"+pdfFilePath);
			$("#pdfFilePath").show();
		}
		$('#m_form').form('clear');
		$("#update_id").val(id);
		$('#m_form').form('load', '../manage/magazineLoad?id='+id);
		$('#dialog_edit').show();
        $('#dialog_edit').dialog({modal:true});
        
        $("#id").textbox({ disabled: true });
	}
	
	//提交
	function doSubmit(){
        $('#m_form').form('submit', {
            url:'../manage/magazineSave',
            onSubmit: function(param){
            	var langCode = $("input[name='langCode']").val();
            	if(langCode == null || langCode == ''){
            		return false;
            	}
            	var v = $(this).form('enableValidation').form('validate');
            	if(!v){
            		return false;
            	}
            	return true;
            },
            success:function(data){
			   var data = eval('(' + data + ')');
               if(data.success==true){
					$('#dialog_edit').dialog('close');
					$('#list_data').datagrid('reload');
				}else{
					alert("error!");
				}
            }
        });
	}
	
	//删除
	function doDel(id){
        $.messager.confirm('消息提示', '确定删除?', function(r){
            if(r){
        		jQuery.ajax({
        	    	type:　"post",
        	    	dataType: 'json',
        	    	url:　'../manage/magazineDel', 
        	    	data: {
        				id:id
        			},
        			error:　function(data){
        				alert('error');
        			},
        	    	success:　function(data){
                        $('#list_data').datagrid('reload');
        			}
           		});
    		}
    	});
	}
	
